<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Add New Hike"
             x:Class="Assignment.AddHike">
    <ContentPage.Content>
            <StackLayout>
                <Entry Placeholder="Name"
                   x:Name="nameEntry"
                   TextTransform="Uppercase"/>
                    
                <Entry Placeholder="Location"
                   x:Name="locationEntry"/>
                    
                <Entry Placeholder="Date"
                   x:Name="dateEntry"/>
                    
                <Entry Placeholder="Parking"
                   x:Name="parkingEntry"/>
                    
                <Entry Placeholder="Length"
                   x:Name="lengthEntry"/>
                    
                <Entry Placeholder="Level"
                   x:Name="levelEntry"/>
                    
                <Entry Placeholder="Quantity"
                   x:Name="quantityEntry"/>
                    
                <Entry Placeholder="Duration"
                   x:Name="durationEntry"/>
                    
                <Entry Placeholder="Description"
                   x:Name="descriptionEntry"/>
                <Button Text="Save"
                    Clicked="Button_Clicked"/>
            </StackLayout>
        </ContentPage.Content>
</ContentPage>